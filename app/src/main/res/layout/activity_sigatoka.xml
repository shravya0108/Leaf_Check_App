<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sigatoka"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="44dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            >

            <HorizontalScrollView
                android:id="@+id/carousel"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="16dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:background="@drawable/round_corner"
                        android:src="@drawable/sigatoka"
                        android:scaleType="centerCrop"
                        android:padding="8dp"
                        android:layout_marginEnd="8dp"
                        />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:background="@drawable/round_corner"
                        android:src="@drawable/sigatoka_1"
                        android:scaleType="centerCrop"
                        android:padding="8dp"
                        android:layout_marginEnd="8dp"
                        />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:background="@drawable/round_corner"
                        android:src="@drawable/sigatoka_2"
                        android:scaleType="centerCrop"
                        android:padding="8dp"
                        />

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/symptoms_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Symptoms"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="16dp"
                />

            <TextView
                android:id="@+id/symptoms_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/symptoms_content_sigatoka"
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textStyle="normal"
                android:lineSpacingExtra="8dp"
                />

            <TextView
                android:id="@+id/preventions_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preventive Measures"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="16dp"
                />

            <TextView
                android:id="@+id/preventions_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preventions_content_sigatoka"
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="@color/black"
                android:lineSpacingExtra="8dp"

                />

            <TextView
                android:id="@+id/remedies_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remedies"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="16dp"
                />

            <TextView
                android:id="@+id/remedies_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/remedies_content_sigatoka"
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:lineSpacingExtra="8dp"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


