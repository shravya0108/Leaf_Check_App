<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Identify">

    <ImageButton
        android:id="@+id/gallery"
        android:layout_width="101dp"
        android:layout_height="69dp"
        android:background="@drawable/round_button"
        android:elevation="8dp"
        android:src="@drawable/ic_baseline_add_photo_alternate"
        android:text="Gallery"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/camera"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.783">


    </ImageButton>


    <Button
        android:id="@+id/predict_button"
        android:layout_width="101dp"
        android:layout_height="69dp"
        android:background="@drawable/round_button"
        android:elevation="8dp"
        android:text="Detect"
        android:textColor="@android:color/white"
        app:cornerRadius="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gallery"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/back"
        android:layout_width="101dp"
        android:layout_height="69dp"
        android:background="@drawable/round_button"
        android:elevation="8dp"
        android:text="back"
        android:textColor="@android:color/white"
        app:cornerRadius="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.803"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gallery"
        app:layout_constraintVertical_bias="0.039" />

    <ImageButton
        android:id="@+id/camera"
        android:layout_width="101dp"
        android:layout_height="69dp"
        android:background="@drawable/round_button"
        android:elevation="8dp"
        android:src="@drawable/ic_add_a_photo"
        android:text="Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gallery"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.783" />

    <ImageView
        android:id="@+id/preview2"
        android:layout_width="264dp"
        android:layout_height="186dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_description"

        tools:ignore="DuplicateIds" />

    <ImageView
        android:id="@+id/preview"
        android:layout_width="264dp"
        android:layout_height="186dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_description"
        app:srcCompat="@drawable/capture1" />

    <TextView
        android:id="@+id/tab_description"
        android:layout_width="262dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:text="Upload or Click a picture!"
        android:textAlignment="center"
        android:textColor="#0C0000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="30sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="143dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#36454F"
        android:textSize="24sp"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606" />

</androidx.constraintlayout.widget.ConstraintLayout>
